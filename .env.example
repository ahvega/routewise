# RouteWise SaaS Configuration
# Copy this file to .env and fill in the values

# =====================================================
# CONVEX DATABASE
# =====================================================
# Get your Convex URL from https://dashboard.convex.dev
PUBLIC_CONVEX_URL=https://your-project.convex.cloud

# =====================================================
# WORKOS AUTHENTICATION
# =====================================================
# Get your WorkOS credentials from https://dashboard.workos.com
WORKOS_API_KEY=sk_live_your_api_key
WORKOS_CLIENT_ID=client_your_client_id
WORKOS_REDIRECT_URI=http://localhost:5173/auth/callback

# =====================================================
# GOOGLE MAPS
# =====================================================
# Get your API key from https://console.cloud.google.com
PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# =====================================================
# APPLICATION SETTINGS
# =====================================================
PUBLIC_APP_NAME=RouteWise
PUBLIC_APP_VERSION=1.0.0
PUBLIC_APP_URL=http://localhost:5173

# =====================================================
# EMAIL (RESEND)
# =====================================================
# Get your API key from https://resend.com
RESEND_API_KEY=re_your_api_key
EMAIL_FROM=noreply@yourdomain.com

# =====================================================
# STRIPE BILLING
# =====================================================
# Get your Stripe credentials from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Webhook secret - get this when creating a webhook endpoint at:
# https://dashboard.stripe.com/webhooks
# Point webhook to: https://yourdomain.com/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs - create these in Products at:
# https://dashboard.stripe.com/products
# Each product should have monthly and yearly price variants
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly_id
STRIPE_PRICE_STARTER_YEARLY=price_starter_yearly_id
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_professional_monthly_id
STRIPE_PRICE_PROFESSIONAL_YEARLY=price_professional_yearly_id
STRIPE_PRICE_BUSINESS_MONTHLY=price_business_monthly_id
STRIPE_PRICE_BUSINESS_YEARLY=price_business_yearly_id
STRIPE_PRICE_FOUNDER_LIFETIME=price_founder_lifetime_id

# =====================================================
# EXCHANGE RATES API (APILayer)
# =====================================================
# Get your API key from https://apilayer.com/marketplace/exchangerates_data-api
# Free tier: 250 requests/month
EXCHANGE_RATES_API_KEY=your_apilayer_api_key

# =====================================================
# OPTIONAL: EXTERNAL SERVICES
# =====================================================
